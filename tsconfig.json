{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".src/",
    "paths": {
      /*"@repositories/*": ["src/modules/models/repositories/*"],
      "@models/*": ["src/modules/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["src/modules/services/*"]*/
    }
  }
}
